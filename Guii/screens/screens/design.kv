<Screen1>:
	BoxLayout:
		orientation:'vertical'
		padding:10
		spacing:10
		Label:
			text:"THIS IS [b]SCREEN 1[/b]"
			markup:True
			font_size:50
			size_hint:1,0.8
		GridLayout:
			size_hint:1,0.2
			cols:2
			Button:
				text:'Prev.'
				on_press:self.text="No Previous Screen Available"
			Button:
				text:'Next'
				on_release:
					root.manager.transition.direction = 'down'
					app.root.current="sc2"
	
